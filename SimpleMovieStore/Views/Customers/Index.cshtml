@using SimpleMovieStore.Models
@model SimpleMovieStore.ViewModels.ViewCustomersViewModel

@{
    ViewBag.Title = "title";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h2>Customers</h2>

<div class="container">
    @if (@Model.Customers.Count == 0)
    {
        <h3>We don't have any customers yet.</h3>
    }
    else
    {
        <table class="table">
            <thead>
                <tr>
                    <th scope="col">Name</th>
                </tr>
            </thead>
    
            <tbody>
                @foreach (var customer in @Model.Customers)
                {
                    <tr>
                        <td><a href="#">@customer.Name</a></td>
                    </tr>
                }
            </tbody>
        </table>
    }
</div>
